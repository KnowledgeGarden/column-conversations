<script>
    function validateForm() {
        var x = document.forms["rootform"]["title"].value;
        if (x === "") {
            alert("Label must be filled out");
            return false;
        }
    };

    function doSelect(e) {
        x = e.value;
        var a = document.getElementById("selected");
        a.value = x;
    };
</script>
<div id="topbox">
    <div style="margin-left: 10px;">
        <form method="post" action="/connections/new/"  role="form" class="form-horizontal" onsubmit="return validateForm()">
