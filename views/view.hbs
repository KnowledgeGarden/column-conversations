<!-- active node -->
<div id="topbox">
    <h2>{{result.statement}}</h2>
    <p>
        {{{result.details}}}
    </p>
</div>
<!-- column headers -->
<div class="columncontainer">
        <div class="column" style="text-align: center;">
            <img class="headerimage" src="/images/ibis/issue_sm.png">Question
            <a href="/conversation/newquestion/{{result.id}}"><img class="respond" src="/images/respond_sm.png"></a>
        </div>
        <div class="column" style="text-align: center;">
            <img class="headerimage" src="/images/ibis/position_sm.png">Answer
            <img class="respond" src="/images/respond_sm.png">
        </div>
        <div class="column" style="text-align: center;">
            <img class="headerimage" src="/images/ibis/plus_sm.png">Pro
            <img class="respond" src="/images/respond_sm.png">
        </div>
        <div class="column" style="text-align: center;">
            <img class="headerimage" src="/images/ibis/minus_sm.png">Con
            <img class="respond" src="/images/respond_sm.png">
        </div>
</div>
<!-- column data -->
<div class="datacontainer">
    <div class="datacolumn">
        {{#each result.questions}}
            <div class="node">
                <a style="margin-left:4px;" href="/conversation/{{id}}">{{statement}}</a>
            </div>
        {{/each}}
    </div>
    <div class="datacolumn">
        {{#each result.answers}}
            <div class="node">
                <a style="margin-left:4px;" href="/conversation/{{id}}">{{statement}}</a>
            </div>
        {{/each}}
    </div>
    <div class="datacolumn">
        {{#each result.pros}}
            <div class="node">
                <a style="margin-left:4px;" href="/conversation/{{id}}">{{statement}}</a>
            </div>
        {{/each}}

    </div>
    <div class="datacolumn">
        {{#each result.cons}}
            <div class="node">
                <a style="margin-left:4px;" href="/conversation/{{id}}">{{statement}}</a>
            </div>
        {{/each}}
    </div>
</div>
